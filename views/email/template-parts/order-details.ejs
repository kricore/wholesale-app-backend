
<table class="td" cellspacing="0" cellpadding="6"
    style="border: 1px solid #e5e5e5; width: 100%; font-family: 'Helvetica Neue', Helvetica, Roboto, Arial, sans-serif;" border="1">
    <thead>
        <tr>
            <th class="td" scope="col" style="text-align:left; border: 1px solid #e5e5e5;padding:12px;">
            Product
            </th>
            <th class="td" scope="col" style="text-align:left; border: 1px solid #e5e5e5;padding:12px;">
                Quantity
            </th>
            <th class="td" scope="col" style="text-align:left; border: 1px solid #e5e5e5;padding:12px;">
            Price
            </th>
        </tr>
    </thead>
    <tbody>
        <% order%>
        <% order.items.forEach( function(item){ %>
            <tr>
                <td style="border: 1px solid #e5e5e5;padding:12px;">
                    <%= item.productTitle %>
                </td>
                <td style="border: 1px solid #e5e5e5;padding:12px;">
                    <%= item.quantity %>
                </td>
                <td style="border: 1px solid #e5e5e5;padding:12px;">
                    <%= ( item.price ) %> &euro;
                </td>
            </tr>

            <% }); %>
        
    </tbody>
    <tfoot>
    
        <tr>
            <th class="td" scope="row" colspan="2"
                style="text-align:left;border-top: 4px solid #e5e5e5; border-left: 1px solid #e5e5e5;padding:12px;">
                Total
            </th>
            <td class="td"
                style="text-align:left;border-top: 4px solid #e5e5e5; border-left: 1px solid #e5e5e5;padding:12px;">
                <%= order.totalPrice %> &euro;
            </td>
        </tr>
    
    </tfoot>
</table>
